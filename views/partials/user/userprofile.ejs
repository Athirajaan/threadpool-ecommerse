    <Script>
             function confirmLogoutWithSadModal() {
                event.preventDefault(); 
                
        Swal.fire({
            title: 'We’re sad to see you go!',
            text: "Are you sure you want to log out? We’ll miss you! Please come back soon.",
            icon: 'info', // Using 'info' for a gentle tone
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, log me out',
            cancelButtonText: 'Stay logged in',
            customClass: {
                popup: 'sad-modal-popup',
                confirmButton: 'sad-modal-confirm',
                cancelButton: 'sad-modal-cancel'
            }
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/logout'; // Proceed with logout
            }
        });
    }


    // Define the breadcrumb paths based on the current page
    const breadcrumbs = {
      home: "/",
      profile: "/profile",
      myInfo: "/profile/my-info",
    };

    // Function to render the breadcrumb
    function renderBreadcrumbs() {
      const path = window.location.pathname;  // Get the current URL path
      let breadcrumbHTML = `<a href="${breadcrumbs.home}" class="hover:underline">Home</a>`;

      if (path.includes(breadcrumbs.profile)) {
        breadcrumbHTML += ` <span class="mx-2">/</span><a href="${breadcrumbs.profile}" class="hover:underline">Profile</a>`;
      }
      if (path.includes(breadcrumbs.myInfo)) {
        breadcrumbHTML += ` <span class="mx-2">/</span><span class="text-gray-800 font-semibold">My Info</span>`;
      }

      document.getElementById("breadcrumb").innerHTML = breadcrumbHTML;  // Insert the breadcrumb HTML
    }

    // Call the function to render breadcrumbs when the page loads
    window.onload = renderBreadcrumbs;

    </Script>