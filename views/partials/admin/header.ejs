    />

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  </head>
  <body class="bg-[#FFF9E5] font-sans">
    <!-- Container for Sidebar and Content -->
    <div class="flex">
      <aside
        id="sidebar"
        class="bg-white w-64 p-4 border-r fixed lg:relative z-10 transform -translate-x-full lg:translate-x-0 transition-transform duration-300 ease-in-out h-screen"
      >
        <!-- Logo Section -->
        <div class="flex items-center space-x-4 mb-6 p-2">
          <img
            src="https://cdn.gymshark.com/images/branding/gs-icon-black.svg"
            alt="Logo"
            class="h-10"
          />
          <div>
            <h1 class="text-xl md:text-2xl font-bold text-gray-800 font-serif">
              Thread<span class="text-yellow-500">p</span>ool
            </h1>
            <p class="text-sm font-medium text-gray-500">Strength â€” Fashion</p>
          </div>
        </div>

        <!-- Navigation Links -->
        <nav class="space-y-4">
          <a
            href="/admin"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-tachometer-alt mr-3"></i>
            <span>Dashboard</span>
          </a>
          <a
            href="/admin/Products"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-box mr-3"></i>
            <span>All Products</span>
          </a>
          <a
            href="/admin/customers"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-users mr-3"></i>
            <span>Customers</span>
          </a>
          <a
            href="/admin/order"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-shopping-cart mr-3"></i>
            <span>Order List</span>
          </a>
          <a
            href="/admin/category"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-list mr-3"></i>
            <span>Category</span>
          </a>
          <a
            href="/admin/coupons"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-tag mr-3"></i>
            <span>Coupon</span>
          </a>

          <a
            href="/admin/offers"
            class="flex items-center p-3 rounded-lg text-gray-700 hover:bg-yellow-100 hover:text-gray-900 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-gift mr-3"></i>
            <span>Offer</span>
          </a>
          <a
            href="/admin/logout"
            class="flex items-center p-3 mt-4 rounded-lg bg-red-500 text-white hover:bg-red-600 transition-all duration-300 ease-in-out"
          >
            <i class="fas fa-sign-out-alt mr-3"></i>
            <span>Logout</span>
          </a>
        </nav>
      </aside>
    </div>
  </body>
