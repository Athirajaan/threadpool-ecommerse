   <script>
        // Get the current URL path
        const path = window.location.pathname;
    
        // Define the mapping of paths to the corresponding sidebar links
        const pageMap = {
            '/admin': 'dashboard-link',
            '/admin/products': 'products-link',
            '/admin/customers': 'customers-link',
            '/admin/order': 'order-link',
            '/admin/category': 'category-link',
            '/admin/coupon': 'coupon-link',
            '/admin/banner': 'banner-link',
            '/admin/offer': 'offer-link',
        };
    
        // Remove 'active' class from all links first
        Object.values(pageMap).forEach(linkId => {
            document.getElementById(linkId).classList.remove('bg-yellow-100', 'text-gray-900');
        });
    
        // Add 'active' class to the correct link based on the current path
        const activeLinkId = pageMap[path];
        if (activeLinkId) {
            document.getElementById(activeLinkId).classList.add('bg-yellow-100', 'text-gray-900');
        }
    </script>
    
    
