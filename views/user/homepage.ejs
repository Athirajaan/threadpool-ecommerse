<!-- New Arrivals Section -->
<section class="grid grid-cols-1 md:grid-cols-4 gap-6 mt-5 mx-3">
  <% for (let i = 0; i < products.length; i++) { %>
    <!-- Dynamic Product Card -->
    <div class="bg-white p-4 rounded-lg shadow-md flex flex-col items-center space-y-4">
      <!-- Link to Product View -->
      <a href="/productDetails?id=<%= products[i]._id %>" class="block w-full">
        <img 
          src="<%= products[i].productImage[0] %>" 
          alt="Product Image" 
          class="w-[90%] h-[300px] object-cover rounded-lg">
      </a>
      <a href="/product/<%= products[i]._id %>" class="block text-lg font-semibold text-gray-800 hover:underline">
        <%= products[i].productName %>
      </a>
      <p class="text-gray-600">Explore Now!</p>
    </div>
  <% } %>
</section>


