<%- include('../partials/user/userheader') %> 


<!-- Hero Section -->
<section class="relative flex flex-col items-center justify-center bg-gray-100 rounded-lg mx-auto w-full shadow-md h-[500px]">
  <video autoplay muted loop class="absolute top-0 left-0 w-full h-full object-cover rounded-lg">
      <source src="/videos/homeBanner.mp4" type="video/mp4">
      Your browser does not support the video tag.
  </video>
  
  <!-- Overlay Content -->
  <div class="relative z-10 text-center text-white px-6">
    <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow-lg">
      Unleash Your Power <br> with Premium Gym Wear
    </h1>
    <p class="text-lg md:text-xl mb-6 drop-shadow-lg">
      Performance, Style, and Comfort for Every Workout.
    </p>
    <a href="/womenShop" class="px-6 py-3 bg-white hover:bg-white text-black text-lg font-medium rounded-lg shadow-md transition duration-300">
      Shop Now
    </a>
  </div>
  
  <!-- Optional Overlay -->
  <div class="absolute top-0 left-0 w-full h-full bg-black bg-opacity-50 rounded-lg"></div>
</section>



<!-- Section Header -->
<div class="container mx-auto px-4 py-12">
  <div class="flex items-center justify-between mb-8">
    <div class="relative">
      <h2 class="text-3xl font-bold text-gray-900">Our Top Sellers</h2>
      <div class="absolute -bottom-2 left-0 w-24 h-1 bg-yellow-500"></div>
    </div>
    <a href="/womenShop" class="inline-flex items-center text-yellow-600 hover:text-yellow-700 font-medium">
      View All
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
      </svg>
    </a>
  </div>

  <!-- Products Grid -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <% for (let i = 0; i < products.length; i++) { %>
      <div class="group">
        <div class="relative bg-white rounded-lg shadow-sm hover:shadow-xl transition-shadow duration-300 overflow-hidden">
          <!-- Product Images with Hover Effect -->
          <div class="aspect-w-3 aspect-h-4 relative overflow-hidden">
            <img 
              src="<%= products[i].productImage[0] %>" 
              alt="<%= products[i].productName %>" 
              class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-0">
            <img 
              src="<%= products[i].productImage[1] || products[i].productImage[0] %>" 
              alt="<%= products[i].productName %>" 
              class="w-full h-full object-cover absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
          </div>

          <!-- Quick Shop Button -->
          <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-0 group-hover:bg-opacity-70 backdrop-blur-sm transition-all duration-300 h-0 group-hover:h-14 flex items-center justify-center">
            <a href="/productDetails?id=<%= products[i]._id %>" 
               class="text-white font-medium tracking-wider uppercase text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 hover:text-yellow-400">
              Quick View
            </a>
          </div>

          <!-- Product Info -->
          <div class="p-4">
            <h3 class="font-medium text-gray-900 group-hover:text-yellow-600 transition-colors duration-200 mb-2">
              <%= products[i].productName %>
            </h3>
            <div class="flex items-center justify-between">
              <div class="flex flex-col">
                <span class="text-lg font-bold text-gray-900">₹<%= products[i].salePrice %></span>
                <% if (products[i].regularPrice > products[i].salePrice) { %>
                  <span class="text-sm text-gray-500 line-through">₹<%= products[i].regularPrice %></span>
                <% } %>
              </div>
              <% const discount = Math.round((products[i].regularPrice - products[i].salePrice) / products[i].regularPrice * 100) %>
              <% if (discount > 0) { %>
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                  -<%= discount %>%
                </span>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</div>


<!-- Sale Banner -->
<div class="relative overflow-hidden bg-gradient-to-r from-yellow-400 via-yellow-300 to-yellow-200 mb-8">
  <div class="absolute inset-0">
    <img src="/images/sale-pattern.jpg" alt="Sale Pattern" class="w-full h-full object-cover opacity-10">
  </div>
  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div class="text-center md:text-left">
        <h2 class="text-4xl md:text-5xl font-extrabold text-gray-900 tracking-tight mb-4">
          Summer Sale <br/>
          <span class="text-white">Up to 50% Off</span>
        </h2>
        <p class="text-lg md:text-xl text-gray-800 mb-6">
          Discover amazing deals on our latest collection. Limited time offer!
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
          <a href="/shop" class="inline-flex items-center px-8 py-3 border border-transparent text-base font-medium rounded-md text-white bg-gray-900 hover:bg-gray-800 transition duration-150">
            Shop Now
          </a>
          <a href="/new-arrivals" class="inline-flex items-center px-8 py-3 border border-gray-900 text-base font-medium rounded-md text-gray-900 bg-transparent hover:bg-gray-900 hover:text-white transition duration-150">
            New Arrivals
          </a>
        </div>
      </div>
      <div class="relative h-64 md:h-96">
        <img src="/images/david.jpg" alt="Sale Hero Image" class="absolute inset-0 w-full h-full object-cover rounded-lg shadow-2xl">
        <div class="absolute top-4 right-4 bg-white rounded-full p-4 shadow-lg">
          <span class="text-2xl font-bold text-gray-900">50%</span>
          <span class="block text-sm text-gray-600">OFF</span>
        </div>
      </div>
    </div>
  </div>
</div>

  <!-- Featured Products Section -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="relative mb-8">
      <h2 class="text-3xl font-bold text-gray-900">Featured Products</h2>
      <div class="absolute -bottom-2 left-0 w-24 h-1 bg-yellow-500"></div>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      <% for(let i = 4; i < Math.min(products.length, 8); i++) { %>
        <div class="group">
          <div class="relative bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow duration-300">
            <!-- Product Images with Hover Effect -->
            <div class="aspect-w-1 aspect-h-1 w-full relative overflow-hidden">
              <img 
                src="<%= products[i].productImage[0] %>" 
                alt="<%= products[i].productName %>" 
                class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-0">
              <img 
                src="<%= products[i].productImage[1] || products[i].productImage[0] %>" 
                alt="<%= products[i].productName %>" 
                class="w-full h-full object-cover absolute inset-0 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
            </div>

            <!-- Quick Shop Button -->
            <div class="absolute bottom-0 left-0 right-0 bg-black bg-opacity-0 group-hover:bg-opacity-70 backdrop-blur-sm transition-all duration-300 h-0 group-hover:h-14 flex items-center justify-center">
              <a href="/productDetails?id=<%= products[i]._id %>" 
                 class="text-white font-medium tracking-wider uppercase text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300 hover:text-yellow-400">
                Quick View
              </a>
            </div>

            <!-- Product Info -->
            <div class="p-4">
              <h3 class="font-medium text-gray-900 group-hover:text-yellow-600 transition-colors duration-200 mb-2">
                <%= products[i].productName %>
              </h3>
              <div class="flex items-center justify-between">
                <div class="flex flex-col">
                  <span class="text-lg font-bold text-gray-900">₹<%= products[i].salePrice %></span>
                  <% if (products[i].regularPrice > products[i].salePrice) { %>
                    <span class="text-sm text-gray-500 line-through">₹<%= products[i].regularPrice %></span>
                  <% } %>
                </div>
                <% const discount = Math.round((products[i].regularPrice - products[i].salePrice) / products[i].regularPrice * 100) %>
                <% if (discount > 0) { %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    -<%= discount %>%
                  </span>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>

<%- include('../partials/user/userfooter') %> 

