<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Forgot Password</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Navbar -->
    <header
      class="flex justify-between items-center p-5 bg-white sticky top-0 z-50"
    >
      <div class="flex items-center space-x-2">
        <div class="flex items-center space-x-4">
          <!-- Logo -->
          <img
            src="https://cdn.gymshark.com/images/branding/gs-icon-black.svg"
            alt="Logo"
            class="h-10"
          />
          <div>
            <h1 class="text-xl md:text-2xl font-bold text-gray-800 font-serif">
              Thread<span class="text-yellow-500">p</span>ool
            </h1>
            <p class="text-sm font-medium text-gray-500">Strength â€” Fashion</p>
          </div>
        </div>
      </div>
      <div class="flex space-x-2 md:space-x-4">
        <button onclick="window.location.href='/login'" class="px-6 py-2.5 bg-yellow-500 text-white font-medium rounded-md relative overflow-hidden group">
          <span class="relative z-10">Login</span>
          <div class="absolute inset-0 w-0 bg-yellow-600 group-hover:w-full transition-all duration-300"></div>
        </button>
        <button onclick="window.location.href='/signup'" class="px-6 py-2.5 text-gray-700 font-medium hover:text-yellow-500 relative group overflow-hidden">
          <span class="relative z-10">Sign Up</span>
          <div class="absolute inset-0 w-full h-full bg-gray-100 transform translate-y-full group-hover:translate-y-0 transition-transform duration-300"></div>
        </button>
      </div>  
    </header>

    <!-- Display error message if it exists -->
    <% if (typeof message !== 'undefined' && message) { %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded-lg mb-6" role="alert">
        <span class="block sm:inline"><%= message %></span>
      </div>
    <% } %>

    <!-- Main Content -->
    <div class="flex flex-col md:flex-row mt-6 items-center justify-center">
      <div class="flex w-full max-w-4xl bg-white shadow-md rounded-lg overflow-hidden">
        <!-- Left Image Section -->
        <div class="w-1/2 h-auto">
          <img
            src="./images/login.jpg"
            alt="Sign Up Image"
            class="w-full h-full object-cover"
          />
        </div>
        <!-- Form Section -->
        <div class="w-1/2 p-8">
          <div class="w-full">
            <h2 class="text-2xl font-extrabold text-center mb-4">
              Reset Your Password
            </h2>
            <p class="text-center text-gray-700 mb-8">
              Lost your password? No worries! Just enter your email below and
              we'll help you reset it in no time.
            </p>
            <form
              action="/forgot-password"
              method="POST"
              class="space-y-6"
              onsubmit="return validateEmail()"
            >
              <div>
                <label for="email" class="block text-sm font-medium text-gray-700 mb-2"
                  >Email Address</label
                >
                <input
                  type="email"
                  id="email"
                  name="email"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-500"
                />
                <p id="error-message" class="text-red-500 text-sm mt-1"></p>
              </div>
              <button
                type="submit"
                class="w-full py-3 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600 transition duration-200"
              >
                Send 
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <script>
    function validateEmail() {
      const emailInput = document.getElementById('email');
      const emailValue = emailInput.value;
      const emailPattern = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
      const errorMessage = document.getElementById('error-message');

      if (!emailPattern.test(emailValue)) {
        errorMessage.textContent = 'Please enter a valid email address.';
        errorMessage.style.display = 'block';
        return false;
      }

      errorMessage.textContent = '';
      errorMessage.style.display = 'none';
      return true;
    }
  </script>
  </body>
</html>
