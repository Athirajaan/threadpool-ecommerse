    <!-- Main Content -->
    <div class="flex flex-col md:flex-row mt-8 items-center justify-center">
      <div class="flex w-full max-w-4xl bg-white shadow-md rounded-lg overflow-hidden">
        <!-- Left Image Section -->
        <div class="w-1/2 h-auto">
          <img
            src="./images/davidhat.jpg"
